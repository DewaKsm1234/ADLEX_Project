{
  "name": "ems_backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "pkg .",
    "build-win": "pkg . --targets node18-win-x64 --output ems-backend.exe",
    "build-linux": "pkg . --targets node18-linux-x64 --output ems-backend-linux",
    "build-mac": "pkg . --targets node18-macos-x64 --output ems-backend-mac",
    "build-pendrive": "npm run build-win && npm run build-linux",
    "build-all": "pkg server.js --targets node18-win-x64,node18-linux-x64 --output ems-backend",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ems",
    "backend",
    "api",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "description": "EMS Backend API for device management and telemetry",
  "bin": "server.js",
  "pkg": {
    "assets": [
      "public/**/*",
      "node_modules/bcrypt/lib/binding/**/*",
      "node_modules/axios/**/*",
      "node_modules/cors/**/*",
      "node_modules/exceljs/**/*",
      "node_modules/express/**/*",
      "node_modules/mysql2/**/*",
      "node_modules/pdfkit/**/*",
      "*.html",
      "*.css",
      "*.js"
    ],
    "targets": [
      "node18-win-x64",
      "node18-linux-x64",
      "node18-macos-x64"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "archiver": "^7.0.1",
    "axios": "^1.10.0",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.1",
    "nodemailer": "^7.0.5",
    "pdfkit": "^0.17.1",
    "prisma": "^6.15.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  }
}
