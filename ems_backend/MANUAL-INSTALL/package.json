{
  "name": "ems_backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "pkg .",
    "build-win": "pkg . --targets node18-win-x64 --output ems-backend.exe",
    "build-linux": "pkg . --targets node18-linux-x64 --output ems-backend-linux",
    "build-mac": "pkg . --targets node18-macos-x64 --output ems-backend-mac",
    "build-pendrive": "npm run build-win && npm run build-linux",
    "build-all": "pkg server.js --targets node18-win-x64,node18-linux-x64 --output ems-backend",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["ems", "backend", "api", "express"],
  "author": "",
  "license": "ISC",
  "description": "EMS Backend API for device management and telemetry",
  "bin": "server.js",
  "pkg": {
    "assets": [
      "public/**/*",
      "*.html",
      "*.css",
      "*.js"
    ],
    "targets": [
      "node18-win-x64",
      "node18-linux-x64",
      "node18-macos-x64"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "mysql2": "^3.14.1",
    "pdfkit": "^0.17.1"
  },
  "devDependencies": {
    "pkg": "^5.8.1",
    "nodemon": "^3.0.1"
  }
}
